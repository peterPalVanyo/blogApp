<%- include('partials/header') %>

<h1>this is from the index page</h1>

<% blogs.forEach((blog) => { %>
<div>
  <h2><%= blog.title %></h2>
  <img src=" <%= blog.image %> " />
  <span><%= blog.created %></span>
  <!-- substring: everything in between -->
  <p><%= blog.body.substring(0, 100) %>...</p>
  <a href="/blogs/<%= blog._id %>">Details</a>
</div>

<% }) %> 
<%- include('partials/footer') %>
